<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
	<Scripts>
		<Script file="AAOTracker.lua" />
	</Scripts>
	<Windows>
		<!-- Templates Begin -->
		<Label name="AAOTrackerLabelTemplate" font="font_chat_text">
			<Color r="255" g="204" b="102"/>
		</Label>
		<!-- Templates End -->
		<Window name="AAOTrackerMonitor" inherits="EA_Window_Default" layer="secondary" savesettings="true">
			<Size><AbsPoint x="110" y="30"/></Size>
			<Anchors>
				<Anchor point="center" relativePoint="center"/>
			</Anchors>
			<EventHandlers>
				<EventHandler event="OnRButtonUp"  function="AAOTracker.Options.ShowWindow" />
			</EventHandlers>
			<Windows>
				<!-- Main Window Background -->
				<Window name="$parentBackground" inherits="EA_Window_DefaultContextMenuFrame" handleinput="false">
					<Anchors>
						<Anchor point="topleft"     relativePoint="topleft"     relativeTo="$parent"/> 
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
					</Anchors>
				</Window>
				<Label name="$parentText" font="font_default_text_small" textalign="center">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="3" y="3"/>
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="-3" y="-3"/>
						</Anchor>
					</Anchors>
				</Label>
			</Windows>
		</Window>
		<Window name="AAOTrackerOptions" inherits="EA_Window_Default" layer="secondary" movable="true" savesettings="false">
			<Size><AbsPoint x="300" y="450"/></Size>
			<Anchors>
				<Anchor point="center" relativePoint="center"/>
			</Anchors>
			<Windows>
				<Window name="$parentTitleBar" inherits="EA_TitleBar_Default"></Window>
				<Button name="$parentClose"    inherits="EA_Button_DefaultWindowClose" >
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="AAOTracker.Options.CloseWindow"/>
					</EventHandlers>
				</Button>
				<!-- Main Window Background -->
				<Window name="$parentBackground" inherits="EA_Window_DefaultBackgroundFrame" handleinput="true">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
							<AbsPoint x="0" y="32" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent"/>
					</Anchors>
				</Window>		
				<!-- Horizontal Divider that seperates tabbed section and buttons at the bottom of the window -->
				<Window name="$parentHorizDivide" inherits="EA_Window_DefaultSeparator" layer="default">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parent" >
							<AbsPoint x="0" y="-80" />
						</Anchor>
						<Anchor point="bottomright" relativePoint="topright" relativeTo="$parent" >
							<AbsPoint x="0" y="-80" />
						</Anchor>
					</Anchors>
				</Window>
				<Button name="$parentSaveButton" inherits="EA_Button_DefaultResizeable" textalign="center">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="bottomleft" relativeTo="$parent">
							<AbsPoint x="12" y="-15"/>
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="AAOTracker.Options.SaveOptions"/>
					</EventHandlers>
				</Button>
				<Button name="$parentCloseButton" inherits="EA_Button_DefaultResizeable" textalign="center">
					<Anchors>
						<Anchor point="bottomright" relativePoint="bottomright" relativeTo="$parent">
							<AbsPoint x="-12" y="-15"/>
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp" function="AAOTracker.Options.CloseWindow"/>
					</EventHandlers>
				</Button>
				<!-- Enable Mod Checkbox -->
				<Button name="$parentModCheckBox" inherits="EA_Button_DefaultCheckBox">
					<Anchors>
						<Anchor point="topleft" relativePoint="topleft" relativeTo="$parentBackground">
							<AbsPoint x="30" y="20"/>
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp"  function="AAOTracker.Options.EnableModCheckToggle" />
					</EventHandlers>
				</Button>
				<Label name="$parentModLabel" inherits="AAOTrackerLabelTemplate" textalign="left">
					<Size><AbsPoint x="240" y="35" /></Size>
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentModCheckBox">
							<AbsPoint x="10" y="0"/>
						</Anchor>
					</Anchors>
				</Label>
				<!-- Display the Monitor Window Checkbox -->
				<Button name="$parentMonitorCheckBox" inherits="EA_Button_DefaultCheckBox">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentModCheckBox">
							<AbsPoint x="0" y="10"/>
						</Anchor>
					</Anchors>
					<EventHandlers>
						<EventHandler event="OnLButtonUp"  function="AAOTracker.Options.EnableMonitorCheckToggle" />
					</EventHandlers>
				</Button>
				<Label name="$parentMonitorLabel" inherits="AAOTrackerLabelTemplate" textalign="left">
					<Size><AbsPoint x="240" y="35" /></Size>
					<Anchors>
						<Anchor point="topright" relativePoint="topleft" relativeTo="$parentMonitorCheckBox">
							<AbsPoint x="10" y="0"/>
						</Anchor>
					</Anchors>
				</Label>
				<!-- Monitor Text Colour -->
				<Label name="$parentColourSectionLabel" inherits="AAOTrackerLabelTemplate" textalign="Left">
					<Size><AbsPoint x="280" y="30" /></Size>
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentMonitorCheckBox" >
							<AbsPoint x="0" y="10" />
						</Anchor>
					</Anchors>
				</Label>
				<!-- Zero Percentage Colour Combobox-->
				<ComboBox name="$parentColourZeroComboBox" inherits="EA_ComboBox_DefaultResizableSmall">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentColourSectionLabel" >
							<AbsPoint x="-5" y="-5"/>
						</Anchor>
					</Anchors>
				</ComboBox>
				<Label name="$parentColourZeroLabel" inherits="AAOTrackerLabelTemplate" textalign="Left">
					<Size><AbsPoint x="300" y="30" /></Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentColourZeroComboBox">
							<AbsPoint x="10" y="5"/>
						</Anchor>
					</Anchors>
				</Label>
				<!-- 100+ Percentage Colour Combobox-->
				<ComboBox name="$parentColourOneComboBox" inherits="EA_ComboBox_DefaultResizableSmall">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentColourZeroComboBox" >
							<AbsPoint x="0" y="5"/>
						</Anchor>
					</Anchors>
				</ComboBox>
				<Label name="$parentColourOneLabel" inherits="AAOTrackerLabelTemplate" textalign="Left">
					<Size><AbsPoint x="300" y="30" /></Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentColourOneComboBox">
							<AbsPoint x="10" y="5"/>
						</Anchor>
					</Anchors>
				</Label>
				<!-- 200+ Percentage Colour Combobox-->
				<ComboBox name="$parentColourTwoComboBox" inherits="EA_ComboBox_DefaultResizableSmall">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentColourOneComboBox">
							<AbsPoint x="0" y="5"/>
						</Anchor>
					</Anchors>
				</ComboBox>
				<Label name="$parentColourTwoLabel" inherits="AAOTrackerLabelTemplate" textalign="Left">
					<Size><AbsPoint x="300" y="30" /></Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentColourTwoComboBox">
							<AbsPoint x="10" y="5"/>
						</Anchor>
					</Anchors>
				</Label>
				<!-- 300+ Percentage Colour Combobox-->
				<ComboBox name="$parentColourThreeComboBox" inherits="EA_ComboBox_DefaultResizableSmall">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentColourTwoComboBox">
							<AbsPoint x="0" y="5"/>
						</Anchor>
					</Anchors>
				</ComboBox>
				<Label name="$parentColourThreeLabel" inherits="AAOTrackerLabelTemplate" textalign="Left">
					<Size><AbsPoint x="250" y="30" /></Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentColourThreeComboBox">
							<AbsPoint x="10" y="5"/>
						</Anchor>
					</Anchors>
				</Label>
				<!-- 400 Percentage Colour Combobox-->
				<ComboBox name="$parentColourFourComboBox" inherits="EA_ComboBox_DefaultResizableSmall">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentColourThreeComboBox">
							<AbsPoint x="0" y="5"/>
						</Anchor>
					</Anchors>
				</ComboBox>
				<Label name="$parentColourFourLabel" inherits="AAOTrackerLabelTemplate" textalign="Left">
					<Size><AbsPoint x="250" y="30" /></Size>
					<Anchors>
						<Anchor point="right" relativePoint="left" relativeTo="$parentColourFourComboBox">
							<AbsPoint x="10" y="5"/>
						</Anchor>
					</Anchors>
				</Label>
				<!-- Alert Channels Combobox-->
				<Label name="$parentAlertsLabel" inherits="AAOTrackerLabelTemplate" textalign="center">
					<Size><AbsPoint x="250" y="30" /></Size>
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentColourFourComboBox">
							<AbsPoint x="0" y="5"/>
						</Anchor>
					</Anchors>
				</Label>
				<ComboBox name="$parentAlertsComboBox" inherits="EA_ComboBox_DefaultResizable">
					<Anchors>
						<Anchor point="bottomleft" relativePoint="topleft" relativeTo="$parentAlertsLabel">
							<AbsPoint x="0" y="0"/>
						</Anchor>
					</Anchors>
				</ComboBox>
			</Windows>
		</Window>
	</Windows>
</Interface>